@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-box display-4 text-dark mb-3"></i>
                <h2 class="fw-bold">@ViewBag.Stats.TotalProducts</h2>
                <p class="text-muted mb-0">Total Products</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-people display-4 text-dark mb-3"></i>
                <h2 class="fw-bold">@ViewBag.Stats.TotalCustomers</h2>
                <p class="text-muted mb-0">Total Customers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-cart display-4 text-dark mb-3"></i>
                <h2 class="fw-bold">@ViewBag.Stats.TotalOrders</h2>
                <p class="text-muted mb-0">Total Orders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-currency-dollar display-4 text-dark mb-3"></i>
                <h2 class="fw-bold">@ViewBag.Stats.TotalRevenue.ToString("C")</h2>
                <p class="text-muted mb-0">Total Revenue</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-7">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Orders</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in ViewBag.Stats.RecentOrders)
                            {
                                <tr>
                                    <td><a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="text-decoration-none fw-semibold">@order.OrderNumber</a></td>
                                    <td>@order.Customer.Name</td>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    <td class="fw-bold">@order.TotalAmount.ToString("C")</td>
                                    <td><span class="badge bg-secondary">@order.Status</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white">
                <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-dark">
                    View All Orders <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-lg-5">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Low Stock Alert</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    @foreach (var product in ViewBag.Stats.LowStockProducts)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <div>
                                <h6 class="mb-0">@product.Name</h6>
                                <small class="text-muted">@product.Category</small>
                            </div>
                            <span class="badge bg-danger">@product.StockQuantity left</span>
                        </div>
                    }
                </div>
            </div>
            <div class="card-footer bg-white">
                <a asp-controller="Products" asp-action="Index" class="btn btn-sm btn-outline-danger">
                    Manage Products <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
        
        <div class="card border-0 shadow-sm mt-3">
            <div class="card-body text-center">
                <h5 class="mb-3">Quick Actions</h5>
                <div class="d-grid gap-2">
                    <a asp-controller="Orders" asp-action="Create" class="btn btn-dark">
                        <i class="bi bi-plus-circle"></i> Create New Order
                    </a>
                    <a asp-controller="Products" asp-action="Create" class="btn btn-outline-dark">
                        <i class="bi bi-box"></i> Add Product
                    </a>
                    <a asp-controller="Customers" asp-action="Create" class="btn btn-outline-dark">
                        <i class="bi bi-person-plus"></i> Add Customer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
