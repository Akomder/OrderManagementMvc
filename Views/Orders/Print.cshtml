@model OrderManagementMvc.Models.Order

@{
    ViewData["Title"] = "Print Order";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order @Model.OrderNumber</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        @@media print {
            .no-print { display: none; }
            body { padding: 20px; }
        }
        
        body {
            background: white;
            color: black;
        }
        
        .invoice-header {
            border-bottom: 3px solid #000;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }
        
        .invoice-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #000;
        }
        
        .company-info {
            text-align: right;
        }
        
        .info-section {
            background: #f8f9fa;
            padding: 15px;
            border: 1px solid #000;
            margin-bottom: 20px;
        }
        
        .items-table {
            border: 2px solid #000;
        }
        
        .items-table th {
            background: #000;
            color: white;
            font-weight: bold;
        }
        
        .items-table td, .items-table th {
            border: 1px solid #000;
            padding: 10px;
        }
        
        .total-section {
            background: #000;
            color: white;
            font-size: 1.3rem;
            font-weight: bold;
        }
        
        .footer {
            margin-top: 50px;
            padding-top: 20px;
            border-top: 2px solid #000;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="no-print text-end mb-3">
            <button onclick="window.print()" class="btn btn-dark">
                <i class="bi bi-printer"></i> Print
            </button>
            <button onclick="window.close()" class="btn btn-outline-dark">
                Close
            </button>
        </div>

        <div class="invoice-header">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="invoice-title">INVOICE</h1>
                    <p class="mb-0"><strong>Order Number:</strong> @Model.OrderNumber</p>
                    <p class="mb-0"><strong>Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                </div>
                <div class="col-md-6 company-info">
                    <h3>Order Management System</h3>
                    <p class="mb-0">123 Business Street</p>
                    <p class="mb-0">City, State 12345</p>
                    <p class="mb-0">Phone: (555) 123-4567</p>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="info-section">
                    <h5 class="fw-bold mb-3">BILL TO:</h5>
                    <p class="mb-1"><strong>@Model.Customer.Name</strong></p>
                    <p class="mb-1">@Model.Customer.Email</p>
                    <p class="mb-1">@Model.Customer.Phone</p>
                    <p class="mb-0">@Model.Customer.Address</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-section">
                    <h5 class="fw-bold mb-3">ORDER INFO:</h5>
                    <p class="mb-1"><strong>Status:</strong> @Model.Status</p>
                    <p class="mb-1"><strong>Agent:</strong> @(Model.Agent?.Name ?? "No Agent")</p>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <p class="mb-0"><strong>Notes:</strong> @Model.Notes</p>
                    }
                </div>
            </div>
        </div>

        <table class="table items-table mb-4">
            <thead>
                <tr>
                    <th style="width: 10%;">#</th>
                    <th style="width: 40%;">Product Description</th>
                    <th style="width: 15%;" class="text-end">Unit Price</th>
                    <th style="width: 15%;" class="text-center">Quantity</th>
                    <th style="width: 20%;" class="text-end">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int itemNumber = 1;
                }
                @foreach (var detail in Model.OrderDetails)
                {
                    <tr>
                        <td>@(itemNumber++)</td>
                        <td>
                            <strong>@detail.Product.Name</strong><br />
                            <small>Category: @detail.Product.Category</small>
                        </td>
                        <td class="text-end">@detail.UnitPrice.ToString("C")</td>
                        <td class="text-center">@detail.Quantity</td>
                        <td class="text-end">@detail.Subtotal.ToString("C")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="total-section">
                    <td colspan="4" class="text-end">TOTAL AMOUNT:</td>
                    <td class="text-end">@Model.TotalAmount.ToString("C")</td>
                </tr>
            </tfoot>
        </table>

        <div class="footer">
            <p class="mb-2"><strong>Thank you for your business!</strong></p>
            <p class="mb-0"><small>This is a computer-generated invoice. No signature is required.</small></p>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
