@model OrderManagementMvc.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-receipt"></i> Order Details</h4>
            <a asp-action="Print" asp-route-id="@Model.Id" class="btn btn-light btn-sm" target="_blank">
                <i class="bi bi-printer"></i> Print
            </a>
        </div>
        <div class="card-body p-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="fw-bold mb-3">Order Information</h5>
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-semibold">Order Number:</td>
                            <td>@Model.OrderNumber</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Order Date:</td>
                            <td>@Model.OrderDate.ToString("MMMM dd, yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Status:</td>
                            <td>
                                @{
                                    var badgeClass = Model.Status switch
                                    {
                                        "Completed" => "bg-success",
                                        "Pending" => "bg-warning text-dark",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@Model.Status</span>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5 class="fw-bold mb-3">Customer & Agent</h5>
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-semibold">Customer:</td>
                            <td>@Model.Customer.Name</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Email:</td>
                            <td>@Model.Customer.Email</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Phone:</td>
                            <td>@Model.Customer.Phone</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Agent:</td>
                            <td>@(Model.Agent?.Name ?? "No Agent")</td>
                        </tr>
                    </table>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="alert alert-info">
                    <strong>Notes:</strong> @Model.Notes
                </div>
            }

            <h5 class="fw-bold mb-3">Order Items</h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Product</th>
                            <th>Category</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <tr>
                                <td class="fw-semibold">@detail.Product.Name</td>
                                <td><span class="badge bg-secondary">@detail.Product.Category</span></td>
                                <td class="text-end">@detail.UnitPrice.ToString("C")</td>
                                <td class="text-center">@detail.Quantity</td>
                                <td class="text-end fw-bold">@detail.Subtotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <th colspan="4" class="text-end">TOTAL AMOUNT:</th>
                            <th class="text-end">@Model.TotalAmount.ToString("C")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="mt-4">
                <h5 class="fw-bold mb-3">Update Status</h5>
                <form asp-action="UpdateStatus" method="post" class="d-flex gap-2">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <select name="status" class="form-select" style="max-width: 200px;">
                        <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                        <option value="Processing" selected="@(Model.Status == "Processing")">Processing</option>
                        <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                        <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                    </select>
                    <button type="submit" class="btn btn-dark">
                        <i class="bi bi-check-circle"></i> Update Status
                    </button>
                </form>
            </div>

            <div class="d-flex gap-2 mt-4 pt-3 border-top">
                <a asp-action="Print" asp-route-id="@Model.Id" class="btn btn-dark" target="_blank">
                    <i class="bi bi-printer"></i> Print Order
                </a>
                <a asp-action="Index" class="btn btn-outline-dark">
                    <i class="bi bi-arrow-left"></i> Back to Orders
                </a>
            </div>
        </div>
    </div>
</div>
