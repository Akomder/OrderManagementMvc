@model dynamic

@{
    ViewData["Title"] = "Customer Report";
}

<div class="container-fluid px-4">
    <h2 class="fw-bold mb-4"><i class="bi bi-person-lines-fill"></i> Customer Report</h2>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Customer Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th class="text-center">Total Orders</th>
                            <th class="text-end">Total Spent</th>
                            <th>Last Order Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.CustomerName</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">@item.TotalOrders</span>
                                </td>
                                <td class="text-end fw-bold">@item.TotalSpent.ToString("C")</td>
                                <td>
                                    @if (item.LastOrderDate != default(DateTime))
                                    {
                                        @item.LastOrderDate.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">No orders</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
