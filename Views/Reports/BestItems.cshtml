@model dynamic

@{
    ViewData["Title"] = "Best Selling Items";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-trophy"></i> Best Selling Items</h2>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th class="text-end">Total Quantity Sold</th>
                            <th class="text-end">Total Revenue</th>
                            <th class="text-center">Number of Orders</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rank = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">
                                    @if (rank <= 3)
                                    {
                                        <span class="badge @(rank == 1 ? "bg-warning" : rank == 2 ? "bg-secondary" : "bg-dark")">
                                            @rank
                                        </span>
                                    }
                                    else
                                    {
                                        @rank
                                    }
                                </td>
                                <td class="fw-semibold">@item.ProductName</td>
                                <td><span class="badge bg-secondary">@item.Category</span></td>
                                <td class="text-end">@item.TotalQuantitySold</td>
                                <td class="text-end fw-bold">@item.TotalRevenue.ToString("C")</td>
                                <td class="text-center">@item.OrderCount</td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
