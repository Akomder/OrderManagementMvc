@model dynamic

@{
    ViewData["Title"] = "Product Customers";
    var products = ViewData["Products"] as List<OrderManagementMvc.Models.Product>;
    var productId = ViewData["ProductId"] as int?;
    var productName = ViewData["ProductName"] as string;
}

<div class="container-fluid px-4">
    <h2 class="fw-bold mb-4"><i class="bi bi-people-fill"></i> Customers by Product</h2>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <label class="form-label fw-semibold">Select Product</label>
                    <select name="productId" class="form-select">
                        <option value="">-- Select a product --</option>
                        @foreach (var product in products)
                        {
                            <option value="@product.Id" selected="@(product.Id == productId)">
                                @product.Name - @product.Category
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-dark w-100">
                        <i class="bi bi-search"></i> View
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (productId != null && Model.Count > 0)
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Customers who purchased: @productName</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Customer Name</th>
                                <th>Email</th>
                                <th class="text-end">Total Quantity</th>
                                <th class="text-end">Total Spent</th>
                                <th class="text-center">Orders</th>
                                <th>Last Purchase</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int totalQuantity = 0;
                                decimal totalSpent = 0;
                            }
                            @foreach (var item in Model)
                            {
                                totalQuantity += item.TotalQuantity;
                                totalSpent += item.TotalSpent;
                                <tr>
                                    <td class="fw-semibold">@item.CustomerName</td>
                                    <td>@item.Email</td>
                                    <td class="text-end">@item.TotalQuantity</td>
                                    <td class="text-end fw-bold">@item.TotalSpent.ToString("C")</td>
                                    <td class="text-center">@item.OrderCount</td>
                                    <td>@item.LastPurchaseDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-dark">
                            <tr>
                                <th colspan="2" class="text-end">TOTAL:</th>
                                <th class="text-end">@totalQuantity</th>
                                <th class="text-end">@totalSpent.ToString("C")</th>
                                <th colspan="2"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (productId != null)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No customers found for this product.
        </div>
    }
</div>
